{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"*.css",
			"**/package*.json",
			"**/tsconfig*.json",
			"dist",
			"node_modules",
			"babel.config.js",
			"commitlint.config.js",
			"storybook-static"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "error",
				"useConst": {
					"level": "warn",
					"fix": "unsafe"
				}
			},
			"complexity": {
				"useLiteralKeys": "error"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedVariables": {
					"level": "error",
					"fix": "none"
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"trailingCommas": "all",
			"quoteStyle": "double",
			"indentStyle": "space"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
